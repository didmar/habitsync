{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // For typeorm
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "include": [
      "src/*.ts"
  ],
  "exclude": [
      "node_modules",
      "dist"
  ]
}
